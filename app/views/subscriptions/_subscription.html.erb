<% show_complete = false unless defined? show_complete %>
<a name="<%= dom_id subscription %>"></a>
<section class="subscription preview <%= ' unread' if subscription.changed? %>">
<% unless show_complete %>
	<div class="preview">
		<div class="actions">
			<%= link_to 'â˜’', subscription, method: :delete %>
		</div>
		<div class="data">
			<span class="title">
				<%= link_to subscription.feed.title, subscription %>
				<% if subscription.changed? %>
					(<%= subscription.newcount %>)
				<% end %>
			</span>
			<span class="snippet">
			</span>
		</div>
		<div class="time">
			<%= time_ago_in_words subscription.feed.last_modified %>
		</div>
	</div>
<% else %>
	<header>
	</header>

	<%= render @entries %>
<% end %>

</section>
