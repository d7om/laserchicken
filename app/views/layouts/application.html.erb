<% appname = Rails.application.class.parent_name %>
<!DOCTYPE html>
<html>
<head>
  <title><%= appname %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="all">
    <header>
        <div class="banner">
            <%= link_to "I am #{appname}!", root_path, id: "logo" %>

            <% if signed_in? %>
                <div class="user">Hi, <%= current_user.name %>! <%= link_to "logout", logout_path %></div>
            <% end %>
        </div>
        <nav>
            <%= link_to "subscriptions", subscriptions_path %>
        </nav>

        <div id="notifications">
            <% flash.each do |key, value| %>
                    <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>
        </div>

        <div id="title">
            <h1><%= yield(:title) %></h1>
            <h2><%= yield(:subtitle) %></h2>
        </div>

        <div id="form">
            <%= yield(:form) %>
        </div>
    </header>



    <div id="content">
    <%= yield %>
    </div>


    <% if Rails.env.development? %>
    <section class="debug">
        <%= debug(params) if Rails.env.development? %>
    </section>
    <% end %>
</div>
</body>
</html>
