<% provide(:title, 'Users') %>
<% provide(:form, render('form')) unless @user %>

<hr />
<% for user in @users do%>
    <%= form_for user, namespace: dom_id(user), html: { class: 'form-inline' } do |f| %>
        <fieldset>
            <legend><%= user.name %></legend>
            <%= f.text_field :name, placeholder: 'name', class: 'input-small', required: true %>
            <%= f.password_field :password, placeholder: 'password', class: 'input-small', required: true %>
            <%= f.label :is_admin do %>
                admin
                <%= f.check_box :is_admin %>
            <% end %>
            <%= f.button "change", class: :action %>
            <%= link_to "delete", user, method: :delete, data: {confirm: "Delete user #{user.name}? This will DESTROY all their data, too!"}, class: [:action, :danger] %>
        </fieldset>
    <% end %>
<% end %>
